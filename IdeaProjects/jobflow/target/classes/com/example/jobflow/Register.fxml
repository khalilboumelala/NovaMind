<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane styleClass="background-white" stylesheets="@./MainStyle.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jobflow.controllers.RegisterController">
    <StackPane layoutY="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Text fx:id="topText" strokeType="OUTSIDE" strokeWidth="0.0" text="Register">
            <font>
                <Font name="Arial Bold" size="23.0"/>
            </font>
        </Text>
    </StackPane>
    <VBox layoutX="50.0" layoutY="80.0" AnchorPane.bottomAnchor="200.0" AnchorPane.leftAnchor="50.0"
          AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="80.0">

        <HBox>

            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                </Text>
                <TextField fx:id="emailTF" alignment="TOP_LEFT" promptText="Saisir email" styleClass="form-control"/>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Lastname :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                </Text>
                <TextField fx:id="lastnameTF" alignment="TOP_LEFT" promptText="Saisir lastname"
                           styleClass="form-control"/>
            </VBox>


            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password :">
                    <font>
                        <Font name="Arial" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets left="5.0"/>
                    </VBox.margin>
                </Text>
                <PasswordField fx:id="passwordTF" alignment="TOP_LEFT" promptText="Saisir password"
                               styleClass="form-control"/>
            </VBox>

        </HBox>

        <HBox/>


    </VBox>
    <Button fx:id="btnAjout" layoutX="265.0" layoutY="434.0" mnemonicParsing="false" onAction="#manage"
            prefHeight="51.0" prefWidth="150.0" styleClass="success-button" text="Register" textAlignment="CENTER"
            textFill="WHITE" wrapText="true" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="260.0"
            AnchorPane.rightAnchor="260.0"/>
    <HBox alignment="CENTER" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Vous avez deja un compte ? "/>
        <Button mnemonicParsing="false" onAction="#connexion" style="-fx-background-color: #00000000;" text="Connexion"
                textAlignment="CENTER" textFill="#0063fa" wrapText="true"/>
    </HBox>
</AnchorPane>
